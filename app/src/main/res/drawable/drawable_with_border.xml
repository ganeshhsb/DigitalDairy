<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape -->
    <item>
        <shape android:shape="rectangle">
            <!-- Background color -->
            <solid android:color="#FFC107" /> <!-- Change the color as needed -->
            <!-- Rounded corners -->
            <corners android:radius="8dp" /> <!-- Adjust the radius as needed -->
        </shape>
    </item>

    <!-- Border shape -->
    <item android:right="1dp" android:left="1dp" android:top="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <!-- Border color -->
            <stroke android:width="2dp" android:color="#FF5722" /> <!-- Change the color and width as needed -->
        </shape>
    </item>
</layer-list>